<odoo>

    <record id="select_user_view_form" model="ir.ui.view">
        <field name="name">Select User form</field>
        <field name="model">select.user</field>
        <field name="arch" type="xml">
            <form>
                
                    
                        <group>
                            <field name="Assign_to" />
                        </group>
                    
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                       
                        
                    </footer>
                    
                    
                
                

            </form>
        </field>
    </record>
    
    <record id="action_open_wizerd_select_user" model="ir.actions.act_window">
        <field name="name">Select User Wizerd</field>
        <field name="res_model">select.user</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        
    </record>
    
</odoo>